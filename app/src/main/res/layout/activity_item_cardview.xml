<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="0dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="16dp"
    android:orientation="vertical"
    android:elevation="16dp"
    app:cardCornerRadius="16dp">
    <RelativeLayout
        android:id="@+id/item1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_background"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cardBackgroundColor="#40d7cb"
            app:cardCornerRadius="16dp"
            >
            <ImageView
                android:id="@+id/image_course"
                android:layout_width="42dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_android_black_24dp"
                android:layout_height="42dp"/>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/cardview_background"
            android:orientation="vertical">
            <TextView
                android:id="@+id/course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Lập Trình Android"/>
            <TextView
                android:id="@+id/decription_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="12sp"
                android:text="Bài học sẽ giúp các sinh viên hiểu rõ về lập trình android ở mức cơ bản"/>
            <TextView
                android:id="@+id/episode_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số bài:"/>
        </LinearLayout>


    </RelativeLayout>



</androidx.cardview.widget.CardView>